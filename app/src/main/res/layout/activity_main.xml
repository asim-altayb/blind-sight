<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:visibility="invisible"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextOrigin"
        android:hint="@string/edit_from"
        android:contentDescription="The address where the navigation will start. Default to your current location"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextDestination"
        android:contentDescription="You destination."
        android:hint="@string/edit_to"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFind"
        android:onClick="findPath"
        android:layout_alignParentStart="true"
        android:text="search"
        android:contentDescription="search, navigate to the given destination from the given origin"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/myShit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextLocation"
        android:onClick="nextStep"
        android:text="next step"
        android:contentDescription="Skip this turn and go to the next turn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trafficLight"
        android:onClick="findTrafficLight"
        android:text="traffic light"
        android:contentDescription="Traffic light mode. See if the traffic light ahead is red or green."
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:layout_marginStart="210dp"/>


    <view
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        class="com.google.android.gms.maps.MapView"
        android:id="@+id/CustomMapView"
        android:layout_below="@+id/edit_message"
        android:layout_toEndOf="@+id/nextLocation"
        android:layout_alignEnd="@+id/myShit" />

</RelativeLayout>

